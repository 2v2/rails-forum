
	<%= form_for @user, url: {action: 'create'}, :html => { :class => 'form-horizontal'} do |f| %>
	<fieldset>
  	<legend>Register for Specific Assembly</legend>
	<div class="control-group">
	<%= f.label :screen_name, class: 'control-label' %>
	
	<div class="controls">
	<%= f.text_field :screen_name %>
	</div>
	
	</div>
	<div class="control-group">
	<%= f.label :password, class: 'control-label' %>
	<div class="controls">
	<%= f.text_field :password %>
	</div>
	
	</div>

	<% f.hidden_field :authenticity_token, value: form_authenticity_token() %> 
	

	<div class="form-actions">
	<br>
	<%= f.submit 'Sign Up', class: "btn btn-default btn-sm" %>
	</div>
<% end %>


